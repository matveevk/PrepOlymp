<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="30dp"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:id="@+id/contest_gen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <Spinner
                android:id="@+id/random_contest_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/random_contest_array"
                android:prompt="@string/random_contest_prompt" />

            <Button
                android:id="@+id/contest_gen_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Новый контест"
                android:gravity="center"
                android:layout_marginBottom="25dp"
                android:layout_toRightOf="@id/random_contest_spinner"/>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/problemCardView1"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:layout_below="@+id/contest_gen"
            android:layout_width="match_parent"
            android:clickable="true"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"
            app:contentPadding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cv1_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Задача №"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/cv1_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="информация"
                    android:layout_below="@+id/cv1_tv1"/>

                <TextView
                    android:id="@+id/cv1_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Условие"
                    android:textColor="@android:color/black"
                    android:layout_below="@+id/cv1_tv2"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

