<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.prepolymp.MainActivity">

    <TextView
        android:id="@+id/problemView"
        android:layout_width="285dp"
        android:layout_height="211dp"
        android:textSize="20sp"
        android:text="@string/problem_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/insertAnswer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

    <EditText
        android:id="@+id/insertAnswer"
        android:layout_width="209dp"
        android:layout_height="39dp"
        android:ems="10"
        android:text="@string/insert_ans"
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/checkButton"
        app:layout_constraintTop_toBottomOf="@+id/problemView"
        app:layout_constraintHorizontal_bias="0.502" />

    <Button
        android:id="@+id/checkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/insertAnswer" />

    <TextView
        android:id="@+id/problemInfo"
        android:layout_width="285dp"
        android:layout_height="35dp"
        android:text="@string/problem_info"
        app:layout_constraintBottom_toTopOf="@+id/problemView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintVertical_bias="0.545" />

</android.support.constraint.ConstraintLayout>
